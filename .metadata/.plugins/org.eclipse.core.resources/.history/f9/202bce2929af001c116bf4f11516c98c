package com.Account;

import org.springframework.context.ApplicationEvent;

public class WithdrawalEvent extends ApplicationEvent {
	int amount;
	BankAccount account;

	public WithdrawalEvent(Object source, int amount, BankAccount account) {
		super(source);
		this.amount = amount;
		this.account = account;
	}
	
	public String toString() {
		return "Amount withdrawn is: " + amount + " Balance left is: " + account;
	}
}
